<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="AuctionsPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.auctiontory.model.entity.BatchAuction</class>
        <class>com.auctiontory.model.entity.BatchProduct</class>
        <class>com.auctiontory.model.entity.PartsAuction</class>
        <class>com.auctiontory.model.entity.PartsProduct</class>
        <class>com.auctiontory.model.entity.User</class>
        <class>com.auctiontory.model.entity.UserBatchBid</class>
        <class>com.auctiontory.model.entity.UserPartBid</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/auction_beta"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="java"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
